  "version": "0.1.0",
  "main": "index.js",
  "browserslist": [
    "last 3 versions"
  ],
  "scripts": {
    "start": "saku start",
    "test": "saku test",
    "codecov": "saku codecov",
    "precommit": "lint-staged"
  },
  "wsindex": {
    "pages": [
      {
        "title": "main",
        "desc": "The main app",
        "serve": "http://localhost:4000/pages/journal/index.html",
        "build": "app/pages/journal/"
      },
      {
        "title": "langsheet",
        "desc": "The language resource",
        "serve": "http://localhost:17111/",
        "build": "langsheet/"
      },
      {
        "title": "domaindoc",
